<Window x:Class="Prob_now.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prob_now"
        mc:Ignorable="d"
       Title="AutoUp" Height="600" Width="920" ResizeMode="NoResize" >
    <Grid HorizontalAlignment="Left" Width="900">
        <ListView x:Name="List_view" ScrollViewer.VerticalScrollBarVisibility="Auto" d:ItemsSource="{Binding Files}" Margin="10,10,0,20" SelectionMode="Single" HorizontalAlignment="Left"
                  Width="820" MaxWidth="820">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name_File}"  Width="120"/>
                        <GridViewColumn Header="Дата изменения" DisplayMemberBinding="{Binding Versio}" Width="150"/>
                        <GridViewColumn Header="Версия" DisplayMemberBinding="{Binding Date}" Width="130"/>
                        <GridViewColumn Header="Автор" DisplayMemberBinding="{Binding Autor_ver}" Width="200"/>
                        <GridViewColumn Header="Расширение" DisplayMemberBinding="{Binding Extension}" Width="200"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="835,10,0,0" VerticalAlignment="Top" Height="54" Width="55" Click="Button_Click"/>
    </Grid>
</Window>
